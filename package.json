{
  "name": "shadcn-tw-plugin",
  "version": "0.0.1",
  "description": "A Tailwind CSS plugin for easy and flexible theme customization for the shadcn ui library.",
  "author": "Blaze Shomida",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "tailwindcss",
    "plugin",
    "themes",
    "customization",
    "shadcn"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/blazeshomida/shadcn-tw-plugin"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "NODE_ENV=production tsup",
    "turbo:build": "turbo build",
    "dev": "NODE_ENV=development tsup",
    "turbo:dev": "turbo dev",
    "lint": "eslint",
    "turbo:lint": "turbo lint",
    "types": "tsc",
    "turbo:types": "turbo types",
    "prettier": "prettier . --check",
    "turbo:prettier": "turbo prettier",
    "prettier:fix": "prettier . --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@types/culori": "^2.1.0",
    "@types/node": "^20.12.12",
    "eslint": "9.x",
    "globals": "^15.3.0",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "tsup": "^8.0.2",
    "turbo": "latest",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.11.0"
  },
  "dependencies": {
    "culori": "^4.0.1"
  }
}
